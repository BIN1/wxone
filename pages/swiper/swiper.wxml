<view>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{indicatorActiveColor}}" indicator-color="{{indicatorColor}}" circular="{{circular}}" bindchange="slideChange">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" />
            </swiper-item>
        </block>
        <!--<view class="dots center">
            {{currentIndex}}/{{imgUrls.length}}
        </view>-->
    </swiper>
</view>