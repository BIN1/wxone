.goods-item{
  display: -webkit-box;
}
.item-left{
  width: 200rpx;
  height: 190rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-right {
  position: relative;
  -webkit-box-flex: 1;
  font-size: 28rpx;
  padding: 20rpx;
  border-bottom: 2rpx solid #ededed;
}
.item-name{
  height: 72rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-price{
  display: flex;
  padding-top: 48rpx;
  width: 100%;
}
.price{
  color: #d82422;
  font-size: 36rpx;
}
.retent{
  margin-left: 60rpx;
  padding: 2rpx 8rpx;
  border: 2rpx solid #d82422;
  color: #d82422;
  border-radius: 4rpx;
}
