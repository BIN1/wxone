<view>
    <camera device-position="{{post}}" flash="{{flash}}"></camera>
    <button type="primary" bindtap="switch">切换方向</button>
    <button type="primary" bindtap="takePhoto">拍照</button>
    <button type="primary" bindtap="startRecord">录像</button>
    <button type="primary" bindtap="stopRecord">结束录像</button>
    <image src="{{src}}" class="{{src ? 'show':'hide'}}"/>
    <video id="myVideo" class="{{videoSrc ? 'show':'hide'}}" src="{{videoSrc}}" controls enable-danmu danmu-btn autoplay></video>
</view>