.content {
    font-family: 微软雅黑, 宋体;
    font-size: 14px;
    height: 100%;
    width: 100%;
    background-image: url("http://wechat.zhaoxinnian.com/wechat-source/weather_bg.png");
    background-size: cover;
    color: #FFFFFF;
}

.info {
    padding: 20px;
    background: rgba(0, 0, 0, 0.3);
    box-shadow: 10ox 10px 20px rgba(0, 0, 0, 0.5);
    border-radius: 3px;
}

.today {
    padding-top: 50rpx;
    height: 50%;
}

.temp {
    font-size: 35px;
    text-align: center;
}

.weather {
    text-align: center;
}

.nowinfo {
    color: #fff;
    font-size: 16px;
    margin-right: 10rpx;
    margin-top: 30rpx;
}

.date {
    margin-bottom: 30rpx;
    float: left;
    font-size: 13px;
}

.city {
    float: right;
    font-size: 13px;
}

.weather-date {
    font-size: 13px;
}

.weather-inco {
    position: relative;
    left: 0;
    top: 10px;
}

.future {
    display: flex;
    flex-direction: row;
    height: 30%;
    padding-left: 5rpx;
    /* background: #fff;
  background: rgba(0, 0, 0, 0.1); */
    text-align: center;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
}

.future-item {
    min-height: 100%;
    width: 165rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: 1px solid coral;
    border-radius: 10px;
    padding-top: 10rpx;
    background: rgba(0, 0, 0, 0.1);
}
